<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yAppBg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 界面顶部标题栏 -->

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <!-- 界面内容区域（除标题栏和底部导航栏） -->

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/topLayout" >
    </RelativeLayout>

    <!-- 数据为空或加载失败显示布局 -->

    <LinearLayout
        android:id="@+id/yLinEmpty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/topLayout"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/yImgEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip" />

        <TextView
            android:id="@+id/yTextEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
    </LinearLayout>
    <!-- 数据加载处理框 -->

    <RelativeLayout
        android:id="@+id/progressBarLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/topLayout"
        android:background="@color/menu_tv_white"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/yImgProgressBarIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/yProgressBar"
            android:layout_marginBottom="8dip" />

        <ProgressBar
            android:id="@+id/yProgressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_small"
            android:max="100"
            android:progress="50"
            android:secondaryProgress="75" />
    </RelativeLayout>

</RelativeLayout>